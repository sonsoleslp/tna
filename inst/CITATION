  bibtype  = "InProceedings",
  booktitle = "Proceedings of the 15th International Learning Analytics and Knowledge Conference (LAK '25)",
  pages = "351--361",
  doi = "10.1145/3706468.3706513",
  author = c(person("Mohammed", "Saqr"), person("Sonsoles", "L\u00f3pez-Pernas"), person("Tiina", "T\u00f6rm\u00e4nen"), person("Rogers", "Kaliisa"), person("Kamila", "Misiejuk"), person("Santtu", "Tikka")),
  title = "Transition Network Analysis: A Novel Framework for Modeling, Visualizing, and Identifying the Temporal Patterns of Learners and Learning Processes",
  year = "2025"
)
